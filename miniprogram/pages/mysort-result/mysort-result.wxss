/* miniprogram/pages/mysort-result/mysort-result.wxss */
.flex {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}

.result-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
  flex: 0 0 100rpx;
}
.result-avatar image{
  width:100%;
  height:100%;
}

.result-nickname {
  flex: 4 1 auto;
}

.result-value {
  flex: 2 0 auto;
}